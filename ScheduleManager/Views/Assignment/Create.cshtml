@using ScheduleManager.Data.Enums

@model ScheduleManager.Data.Models.Assignment

@{
    ViewData["Title"] = "Create an Assignment";
}

<div class="container">
    <form asp-action="Create" class="widget">
        <div class="h4 text-center mb-3">@ViewData["Title"]</div>

        <input asp-for="UserId" class="form-control" hidden />

        <div class="my-2">
            <label asp-for="Title" class="control-label"></label>
            <input asp-for="Title" class="form-control" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <div class="my-2">
            <label asp-for="DisciplineId" class="control-label">Discipline</label>
            <select asp-for="DisciplineId" class="form-control form-select">
                @foreach (Discipline discipline in ViewBag.Disciplines)
                {
                    <option value="@discipline.Id">@discipline.Name</option>
                }
            </select>
            <span asp-validation-for="Discipline" class="text-danger"></span>
        </div>

        <div class="my-2">
            <label asp-for="Type" class="control-label">Assignment type</label>
            <select asp-for="Type" class="form-control form-select">
                <option value="">Choose an assignment type</option>
                @foreach (AssignmentType type in Enum.GetValues(typeof(AssignmentType)))
                {
                    <option value="@type">@type</option>
                }
            </select>
            <span asp-validation-for="Discipline" class="text-danger"></span>
        </div>

        <div class="my-2">
            <label asp-for="Description" class="control-label"></label>
            <textarea asp-for="Description" class="form-control"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="my-2">
            <label asp-for="DueDate" class="control-label"></label>
            <input type="date" asp-for="DueDate" class="form-control" />
            <span asp-validation-for="DueDate" class="text-danger"></span>
        </div>

        <div class="mt-3 text-end">
            <input type="submit" value="Create" class="btn btn-primary" />
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
