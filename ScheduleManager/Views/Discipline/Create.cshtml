@model ScheduleManager.Data.Models.Discipline

@{
    ViewData["Title"] = "Create a Discipline";
}

<div class="container">
    <form asp-action="Create" class="widget">
        <div class="h4 text-center mb-3">@ViewData["Title"]</div>

        <input asp-for="UserId" class="form-control" hidden />

        <div class="my-2">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mt-3 text-end">
            <input type="submit" value="Create" class="btn btn-primary" />
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


