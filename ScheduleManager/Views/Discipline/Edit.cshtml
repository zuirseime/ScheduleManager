@model Discipline

@{
    ViewData["Title"] = "Edit the Discipline";
}

<div class="container">
    <form asp-action="" class="widget">
        <div class="h4 text-center mb-3">@ViewData["Title"]</div>

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <input asp-for="UserId" hidden />
        <input asp-for="Id" hidden />

        <div class="my-2">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="d-flex justify-content-end gap-2 mt-3">
            <input type="submit" value="Delete" formaction="delete" class="btn btn-danger px-3" />
            <input type="submit" value="Save" formaction="edit" class="btn btn-primary px-5" />
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
