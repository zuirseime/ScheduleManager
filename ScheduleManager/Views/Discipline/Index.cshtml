@model IEnumerable<ScheduleManager.Data.Models.Discipline>

@{
    ViewData["Title"] = "My Disciplines";
}

<a asp-action="Create" asp-route-userId="@ViewBag.UserId" class="btn btn-primary sticky-button">
    <i class="fa-solid fa-plus"></i>
</a>

<div class="widget">
    <table class="table">
        <thead>
            <tr>
                <th class="text-center">
                    Disciplines
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="widget-tr" onclick="window.location='@Url.Action("Edit", new { id = item.Id, userId = @ViewBag.UserId})';">
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
