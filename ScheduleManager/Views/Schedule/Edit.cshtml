@using ScheduleManager.Data.Enums
@model Lesson

@{
    ViewData["Title"] = "Edit the Lesson";
}

<div class="container">
    <form asp-action="" class="widget">
        <div class="h4 text-center mb-3">@ViewData["Title"]</div>

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <input asp-for="UserId" hidden />
        <input asp-for="Id" hidden />

        <div class="my-2">
            <label asp-for="Day" class="control-label"></label>
            <select asp-for="Day" class="form-control form-select" id="day" data-selected="@ViewBag.Today">
                <option value="">Choose a day</option>
                @foreach (DayOfWeek day in Enum.GetValues(typeof(DayOfWeek)))
                {
                    <option value="@day">@day</option>
                }
            </select>
            <span asp-validation-for="Day" class="text-danger"></span>
        </div>

        <div class="my-2">
            <label asp-for="LessonNumber" class="control-label">Lesson number</label>
            <select asp-for="LessonNumber" class="form-control form-select">
                <option value="">Choose a lesson number</option>
                @foreach (byte cls in ViewBag.Classes)
                {
                    <option value="@cls">@cls</option>
                }
            </select>
            <span asp-validation-for="LessonNumber" class="text-danger"></span>
        </div>

        <div class="my-2">
            <label asp-for="DisciplineId" class="control-label">Discipline</label>
            <select asp-for="DisciplineId" class="form-control form-select">
                @foreach (Discipline discipline in ViewBag.Disciplines)
                {
                    <option value="@discipline.Id">@discipline.Name</option>
                }
            </select>
        </div>

        <div class="my-2">
            <label asp-for="Teacher" class="control-label"></label>
            <input asp-for="Teacher" class="form-control" />
            <span asp-validation-for="Teacher" class="text-danger"></span>
        </div>

        <div class="my-2">
            <label asp-for="Repetition" class="control-label"></label>
            <select asp-for="Repetition" class="form-control form-select">
                <option value="">Choose a repetition</option>
                @foreach (Repetition repetition in Enum.GetValues(typeof(Repetition)))
                {
                    <option value="@repetition">@repetition</option>
                }
            </select>
            <span asp-validation-for="Repetition" class="text-danger"></span>
        </div>

        <div class="my-2">
            <label asp-for="LessonType" class="control-label"></label>
            <select asp-for="LessonType" class="form-control form-select">
                <option value="">Choose a lesson type</option>
                @foreach (LessonType type in Enum.GetValues(typeof(LessonType)))
                {
                    <option value="@type">@type</option>
                }
            </select>
            <span asp-validation-for="LessonType" class="text-danger"></span>
        </div>

        <div class="justify-content-end d-flex gap-2 mt-3">
            <input type="submit" value="Delete" formaction="delete" class="btn btn-danger px-3" />
            <input type="submit" value="Save" formaction="edit" class="btn btn-primary px-5" />
        </div>
    </form>
</div>

